<div class="signup-form">

    <%= form_tag({ controller: 'authentication/register', action: 'create' }, method: 'post') do %>
        <h2>Create Account</h2>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= text_field_tag :first_name, '', class: 'form-control', placeholder: 'Username', required: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
                <%= email_field_tag :email, '', class: 'form-control', placeholder: 'Email Address', required: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password', required: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
				<span class="input-group-addon">
					<i class="fa fa-lock"></i>
					<i class="fa fa-check"></i>
				</span>
                <%= password_field_tag :password_confirmation, '', class: 'form-control', placeholder: 'Confirm Password', required: true %>
            </div>
        </div>
        <div class="form-group">
            <%= button_tag 'Sign Up', type: 'submit', class: 'btn btn-primary btn-block btn-lg' %>
        </div>
        <p class="small text-center">By clicking the Sign Up button, you agree to our <br><a href="#">Terms &amp;
            Conditions</a>, and <a href="#">Privacy Policy</a>.</p>

    <% end %>
</div>
