<div class="row">
    <%= @hot.each do |article| %>
        <div class="col-md-6">
            <div class="post post-thumb">
                <a class="post-img" href="<%= article_path(article) %>">
                    <img src="<%= article.default_photo %>" decoding="async" loading="lazy" alt>
                </a>
                <div class="post-body">
                    <div class="post-meta">
                        <a class="post-category cat-2" href="<%= article_category_path(article.article_category) %>"><%= article.article_category.title %></a>
                        <span class="post-date"><%= article.created_at.strftime("%B %d, %Y") %></span>
                    </div>
                    <h3 class="post-title">
                        <a href="<%= article_path(article) %>"><%= article.title %></a>
                    </h3>
                </div>
            </div>
        </div>
    <% end %>

</div>