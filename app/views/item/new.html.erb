<div class="card">
  <div class="card-header">
    <div class="card-title">
      <h2>Create new item</h2>
    </div>
  </div>
  <div class="card-body">
    <%= form_with(model: @item, method: 'post', url: '/item') do |form| %>
      <div class="form-group">
        <%= form.text_field :name, :class => 'form-control', :placeholder => 'Name' %>
      </div>
      <div class="form-group">
        <%= form.text_field :price, :class => 'form-control', :placeholder => 'Price', :type => 'number' %>
      </div>
      <div class="form-group">
        <%= form.text_area :description, size: "60x10", :class => 'form-control', :placeholder => 'Description' %>
      </div>
      <div class="form-group">
        <%= form.submit :class => "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>

