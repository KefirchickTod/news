<div class="card">
  <div class="card-header">
    <div class="card-title">
      <h3>All items</h3>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-border">
      <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
      </tr>
      </thead>
      <tbody>
      <%= @items.each do |item|  %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>